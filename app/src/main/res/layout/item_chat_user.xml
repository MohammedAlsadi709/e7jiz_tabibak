<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:id="@+id/itemChat"
    tools:ignore="RtlHardcoded"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.cardview.widget.CardView
       android:layout_width="60dp"
       android:id="@+id/cardImg"
       app:cardCornerRadius="300dp"
       app:layout_constraintEnd_toStartOf="@id/linear"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_height="60dp">
       <ImageView
           android:id="@+id/imgUserProfile"
           android:layout_width="60dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/ic_user_profile_default"
           android:layout_height="60dp"/>
   </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/cardImg"
        app:layout_constraintBottom_toBottomOf="@id/cardImg"
        app:layout_constraintStart_toEndOf="@id/cardImg"
        android:orientation="vertical"
        app:layout_constraintBaseline_toTopOf="@id/cardImg"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/txtMessageTime"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اسم المستخدم"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="right"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:id="@+id/txtUsername"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اسم المستخدم"
            android:textSize="12sp"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/txtMessage"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMessageTime"
        android:text="متوفر"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/linear"
        app:layout_constraintTop_toTopOf="@id/linear"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>