<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingStart="16dp"
    android:id="@+id/itemRecommendedMedicine"
    android:paddingEnd="16dp"
    android:layout_marginBottom="6dp"
    tools:ignore="RtlHardcoded"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/txtMedicineName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="هيدروكسيزين"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/txtMedicineDuration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtMedicineDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="10 أيام"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@id/txtMedicineName"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/txtMedicineTimes"
        app:layout_constraintRight_toLeftOf="@id/txtMedicineName"
        app:layout_constraintTop_toTopOf="@id/txtMedicineName" />

    <TextView
        android:id="@+id/txtMedicineTimes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@id/txtMedicineName"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtMedicineDuration"
        app:layout_constraintTop_toTopOf="@id/txtMedicineName" />


</androidx.constraintlayout.widget.ConstraintLayout>